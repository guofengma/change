<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo
       http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="change-product-server"  />

    <!-- 使用广播注册中心暴露服务地址 -->
    <!--<dubbo:registry address="zookeeper://120.77.159.152:2181" />-->
    <dubbo:registry address="zookeeper://120.77.159.152:2181" />

    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="20882" />

    <!-- 暴露的服务接口 -->
    <dubbo:service interface="me.cathub.change.api.rpc.server.product.ProductRpcServer" ref="productRpcServer" />
    <dubbo:service interface="me.cathub.change.api.rpc.server.product.ProductCategoryRpcServer" ref="productCategoryRpcServer" />
    <dubbo:service interface="me.cathub.change.api.rpc.server.product.ProductImageRpcServer" ref="productImageRpcServer" />
    <dubbo:service interface="me.cathub.change.api.rpc.server.product.ProductReviewRpcServer" ref="productReviewRpcServer" />
    <dubbo:service interface="me.cathub.change.api.rpc.server.product.PropertyRpcServer" ref="propertyRpcServer" />
    <dubbo:service interface="me.cathub.change.api.rpc.server.product.PropertyValueRpcServer" ref="propertyValueRpcServer" />

    <bean id="productRpcServer" class="me.cathub.change.product.rpc.server.ProductRpcServerImpl"/>
    <bean id="productCategoryRpcServer" class="me.cathub.change.product.rpc.server.ProductCategoryRpcServerImpl"/>
    <bean id="productImageRpcServer" class="me.cathub.change.product.rpc.server.ProductImageRpcServerImpl"/>
    <bean id="productReviewRpcServer" class="me.cathub.change.product.rpc.server.ProductReviewRpcServerImpl"/>
    <bean id="propertyRpcServer" class="me.cathub.change.product.rpc.server.PropertyRpcServerImpl"/>
    <bean id="propertyValueRpcServer" class="me.cathub.change.product.rpc.server.PropertyValueRpcServerImpl"/>

    <dubbo:reference id="brandQuotientRpcServer" interface="me.cathub.change.api.rpc.server.user.BrandQuotientRpcServer" />
</beans>