<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo
       http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="change-upms-server"  />

    <!-- 使用广播注册中心暴露服务地址 -->
    <dubbo:registry address="zookeeper://192.168.36.136:2181" />

    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="20880" />

    <!-- 暴露的服务接口 -->
    <dubbo:service interface="me.cathub.change.api.rpc.server.upms.RoleRpcRpcServer" ref="roleRpcServer" />
    <dubbo:service interface="me.cathub.change.api.rpc.server.upms.PermissionRpcRpcServer" ref="permissionRpcServer" />

    <bean id="roleRpcServer" class="me.cathub.change.upms.rpc.server.RoleRpcRpcServerImpl"/>
    <bean id="permissionRpcServer" class="me.cathub.change.upms.rpc.server.PermissionRpcRpcServerImpl"/>
</beans>