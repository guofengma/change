<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo
       http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="change-user-server"  />

    <!-- 使用广播注册中心暴露服务地址 -->
    <dubbo:registry address="zookeeper://192.168.36.136:2181" />

    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="20884" />

    <!-- 暴露的服务接口 -->
    <dubbo:service interface="me.cathub.change.api.rpc.server.user.AdminRpcRpcServer" ref="adminRpcServer" />
    <dubbo:service interface="me.cathub.change.api.rpc.server.user.AuditingRpcRpcServer" ref="auditingRpcServer" />
    <dubbo:service interface="me.cathub.change.api.rpc.server.user.BrandQuotientRpcRpcServer" ref="brandQuotientRpcServer" />
    <dubbo:service interface="me.cathub.change.api.rpc.server.user.CompanyRpcRpcServer" ref="companyRpcServer" />
    <dubbo:service interface="me.cathub.change.api.rpc.server.user.OnlineStoreRpcRpcServer" ref="onlineStoreRpcServer" />
    <dubbo:service interface="me.cathub.change.api.rpc.server.user.ShopkeeperRpcRpcServer" ref="shopkeeperRpcServer" />

    <bean id="adminRpcServer" class="me.cathub.change.user.rpc.server.AdminRpcRpcServerImpl"/>
    <bean id="auditingRpcServer" class="me.cathub.change.user.rpc.server.AuditingRpcRpcServerImpl"/>
    <bean id="brandQuotientRpcServer" class="me.cathub.change.user.rpc.server.BrandQuotientRpcRpcServerImpl"/>
    <bean id="companyRpcServer" class="me.cathub.change.user.rpc.server.CompanyRpcRpcServerImpl"/>
    <bean id="onlineStoreRpcServer" class="me.cathub.change.user.rpc.server.OnlineStoreRpcRpcServerImpl"/>
    <bean id="shopkeeperRpcServer" class="me.cathub.change.user.rpc.server.ShopkeeperRpcRpcServerImpl"/>

    <dubbo:reference id="roleRpcServer" interface="me.cathub.change.api.rpc.server.upms.RoleRpcRpcServer" />
</beans>